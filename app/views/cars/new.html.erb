<div class="container">
  <h2>Add new car</h2>

  <%= simple_form_for @car do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :location %>
      <%= f.input :number_plate %>
      <%= f.input :capacity, collection: 1..5 %>
      <%= f.input :year %>
      <%= f.input :price %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Add car' %>
    </div>
  <% end %>
</div>
