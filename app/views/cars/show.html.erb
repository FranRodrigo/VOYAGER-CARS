<div class="container">
  <% @car.photos.each do |photo| %>
  <%= cl_image_tag @car.photos.first.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <div class="car-details">
    <h1><%= @car.brand %> (<%= @car.model %> from <%= @car.year %>)</h1>
    <p><i class="fa-solid fa-coins"></i></i><%= @car.price %>,- â‚¬ per day</p>

    <p><i class="fa-solid fa-location-dot"></i> <%= @car.location %></p>
    <p><i class="fa-solid fa-people-group"></i></i> <%= @car.capacity %> seats</p>
    <% if @car.user == current_user %>
      <%= link_to "Delete", car_path(@car),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to "Update", edit_car_path(@car) %>
    <% end %>
  </div>

  <h2>Book this car</h2>

  <%= simple_form_for([@car, @booking], local:true, data: { turbo:false}) do |f| %>
    <%= f.input :pickup_day, as: :date, html5: true %>
    <%= f.input :return_day, as: :date, html5: true %>
    <%= f.submit "Book it", class: "btn btn-primary" %>
  <% end %>


</div>
